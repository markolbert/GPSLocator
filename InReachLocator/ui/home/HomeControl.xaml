<UserControl
    x:Class="J4JSoftware.InReach.HomeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:J4JSoftware.InReach"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:HomeViewModel}">

    <StackPanel Orientation="Vertical">

        <Button HorizontalAlignment="Center" 
                IsEnabled="{Binding ValidConfiguration}"
                Command="{Binding LastKnownLocationCommand}">
            Last Known Location
        </Button>

        <Button IsEnabled="{Binding ValidConfiguration}" 
                HorizontalAlignment="Center"
                Command="{Binding HistoryCommand}">
            Location History
        </Button>

        <Button HorizontalAlignment="Center" 
                Command="{Binding ConfigureCommand}">
            Settings
        </Button>

    </StackPanel>

</UserControl>
